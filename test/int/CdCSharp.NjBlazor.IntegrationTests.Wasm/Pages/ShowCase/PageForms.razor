@code {

    RenderFragment? FragmentText;
    RenderFragment? FragmentDropdown;
    RenderFragment? FragmentCheckbox;
    RenderFragment? FragmentRadio;
    RenderFragment? FragmentDate;
    RenderFragment? FragmentColor;
    RenderFragment? FragmentNumber;
    RenderFragment? FragmentRange;
    RenderFragment? FragmentFile;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await base.OnAfterRenderAsync(firstRender);

        if (firstRender)
        {
            HttpClient client = new HttpClient();
            string textMd = await client.GetStringAsync("https://raw.githubusercontent.com/wiki/smaicas/CdCSharp.NjBlazor/Forms-InputText.md");
            string dropdownMd = await client.GetStringAsync("https://raw.githubusercontent.com/wiki/smaicas/CdCSharp.NjBlazor/Forms-Dropdown.md");
            string checkMd = await client.GetStringAsync("https://raw.githubusercontent.com/wiki/smaicas/CdCSharp.NjBlazor/Forms-Checkbox.md");
            string radioMd = await client.GetStringAsync("https://raw.githubusercontent.com/wiki/smaicas/CdCSharp.NjBlazor/Forms-RadioButton.md");
            string dateMd = await client.GetStringAsync("https://raw.githubusercontent.com/wiki/smaicas/CdCSharp.NjBlazor/Forms-DateTime.md");
            string colorMd = await client.GetStringAsync("https://raw.githubusercontent.com/wiki/smaicas/CdCSharp.NjBlazor/Forms-InputColor.md");
            string numberMd = await client.GetStringAsync("https://raw.githubusercontent.com/wiki/smaicas/CdCSharp.NjBlazor/Forms-InputNumber.md");
            string rangeMd = await client.GetStringAsync("https://raw.githubusercontent.com/wiki/smaicas/CdCSharp.NjBlazor/Forms-InputRange.md");
            string fileMd = await client.GetStringAsync("https://raw.githubusercontent.com/wiki/smaicas/CdCSharp.NjBlazor/Forms-InputFile.md");

            FragmentText = MarkdownToRenderFragmentParser.ParseText(textMd);
            FragmentDropdown = MarkdownToRenderFragmentParser.ParseText(dropdownMd);
            FragmentCheckbox = MarkdownToRenderFragmentParser.ParseText(checkMd);
